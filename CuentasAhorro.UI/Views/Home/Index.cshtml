 @{
    ViewData["Title"] = "Inicio";
}

<h1>Bienvenido</h1>
<br />
<h3>Clientes</h3>
<div class="cards">
    <section class="cards__card" id="registrar_cliente">
        <label><i class="fi fi-rr-user-add"></i></label>
        <p>Registrar cliente</p>
    </section>
    <section class="cards__card" id="buscar_cliente">
        <label><i class="fi fi-rr-search"></i></label>
        <p>Buscar cliente</p>
    </section>
</div>
<br />
<h3>Cuentas</h3>
<div class="cards">
    <section class="cards__card" id="aperturar_cuenta">
        <label><i class="fi fi-rr-file"></i></label>
        <p>Aperturar cuenta</p>
    </section>
    <section class="cards__card" id="buscar_cuenta">
        <label><i class="fi fi-rr-search-alt"></i></label>
        <p>Buscar cuenta</p>
    </section>
</div>

@section scripts {
    <environment include="Development">
        <script type="text/javascript" src="~/js/home/index.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script type="text/javascript" src="~/js/home/index.min.js" asp-append-version="true"></script>
    </environment>
}