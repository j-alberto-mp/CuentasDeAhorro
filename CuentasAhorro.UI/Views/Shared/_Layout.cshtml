<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cuentas de ahorro</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400&display=swap" rel="stylesheet">
    <link rel='stylesheet' href='https://cdn-uicons.flaticon.com/uicons-regular-rounded/css/uicons-regular-rounded.css'>
    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    @if (IsSectionDefined("Styles"))
    {
        @await RenderSectionAsync("Styles", required: false)
    }
</head>
<body>
    <div class="container">
        <section class="container__sidebar">
            <div class="sidebar__title">
                <h4>Cuenta<span>Ahorro</span></h4>
            </div>
            <ul class="sidebar__items">
                <li class="sidebar__items-item">
                    <a asp-area="" asp-controller="Home" asp-action="Index"><i class="fi fi-rr-home"></i>Inicio</a>
                </li>
                <li class="sidebar__items-item">
                    <a asp-area="" asp-controller="Clientes" asp-action="Index"><i class="fi fi-rr-users-alt"></i>Clientes</a>
                </li>
                <li class="sidebar__items-item">
                    <a asp-area="" asp-controller="Cuentas" asp-action="Index"><i class="fi fi-rr-file-invoice-dollar"></i>Cuentas</a>
                </li>
            </ul>
            <div class="sidebar__logout">
                <a asp-area="" asp-controller="Autenticacion" asp-action="LogOut"><i class="fi fi-rr-sign-out-alt"></i>Salir</a>
            </div>
        </section>
        <main role="main" class="container__main">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @section scripts {
        <environment include="Development">
            <script type="text/javascript" src="~/js/site.js" asp-append-version="true"></script>
        </environment>
        <environment exclude="Development">
            <script type="text/javascript" src="~/js/site.min.js" asp-append-version="true"></script>
        </environment>
    }
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
