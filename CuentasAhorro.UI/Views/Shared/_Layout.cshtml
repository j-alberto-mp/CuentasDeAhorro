<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400&display=swap" rel="stylesheet">
    <link rel='stylesheet' href="~/lib/uicons/css/uicons-regular-rounded.min.css">
    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    @if (IsSectionDefined("Styles"))
    {
        @await RenderSectionAsync("Styles", required: false)
    }
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
</head>
<body>
    <div class="container">
        <section class="container__sidebar" id="sidebar">
            <div class="sidebar__menu">
                <button type="button" id="collapse">
                    <i class="fi-rr-menu-burger"></i>
                </button>
            </div>
            <div class="sidebar__title">
                <a href="/">
                    <h4>Cuenta<span>Ahorro</span></h4>
                </a>
            </div>
            <div class="sidebar__items">
                <div class="sidebar__items-item">
                    <a asp-area="" asp-controller="Home" asp-action="Index"><i class="fi fi-rr-home"></i><span>Inicio</span></a>
                </div>
                <div class="sidebar__items-item">
                    <a class="sidebar__items-menu"><i class="fi fi-rr-users-alt"></i><span>Clientes</span><i class="fi fi-rr-angle-small-right dropdown"></i></a>
                    <ul class="sidebar__items-submenu">
                        <li>
                            <a asp-area="" asp-controller="Cliente" asp-action="Registrar"><i class="fi fi-rr-user-add"></i><span>Nuevo cliente</span></a>
                        </li>
                        <li>
                            <a asp-area="" asp-controller="Cliente" asp-action="Buscar"><i class="fi fi-rr-search"></i><span>Buscar cliente</span></a>
                        </li>
                    </ul>
                </div>
                <div class="sidebar__items-item">
                    <a class="sidebar__items-menu"><i class="fi fi-rr-file-invoice-dollar"></i><span>Cuentas</span><i class="fi fi-rr-angle-small-right dropdown"></i></a>
                    <ul class="sidebar__items-submenu">
                        <li>
                            <a asp-area="" asp-controller="Cuenta" asp-action="Buscar"><i class="fi fi-rr-search-alt"></i><span>Buscar cuenta</span></a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="sidebar__logout">
                <a asp-area="" asp-controller="Autenticacion" asp-action="LogOut"><i class="fi fi-rr-sign-out-alt"></i><span>Salir</span></a>
            </div>
        </section>
        <main role="main" class="container__main">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/moment-js/moment-with-locales.min.js"></script>
    <script src="~/lib/moment-js/moment-timezone-with-data.min.js"></script>
    <environment include="Development">
        <script type="text/javascript" src="~/js/site.js" asp-append-version="true"></script>
        <script type="text/javascript" src="~/js/repository.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script type="text/javascript" src="~/js/site.min.js" asp-append-version="true"></script>
        <script type="text/javascript" src="~/js/repository.min.js" asp-append-version="true"></script>
    </environment>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
